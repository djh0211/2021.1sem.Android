<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InternetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        tools:context=".InternetFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            tools:context=".InternetFragment"
            android:id="@+id/oxfordli">

            <ImageView
                android:id="@+id/oxford"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/oxford" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="옥스포드 사전"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            tools:context=".InternetFragment"
            android:id="@+id/naverli">

            <ImageView
                android:id="@+id/naver"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/naver" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="네이버 사전"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:orientation="vertical"
            tools:context=".InternetFragment"
            android:id="@+id/daumli">

            <ImageView
                android:id="@+id/daum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/daum" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="다음 사전"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>